@model CadastroEpi.Domain.Model.Empresa

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Empresa</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.EmpresaId)

    <div class="form-group">
        <label for="formGroupExampleInput" class="control-label col-md-2">Razão Social</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.RazaoSocial, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RazaoSocial, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <label for="formGroupExampleInput" class="control-label col-md-2">Tipo de Identificador</label>
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.TipoIdentificador, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipoIdentificador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="formGroupExampleInput" class="control-label col-md-2">Identificador</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Identificador, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Identificador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Mostrar a listagem de empresas", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
