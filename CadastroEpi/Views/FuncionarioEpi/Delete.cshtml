@model CadastroEpi.Domain.Model.FuncionarioEpi

@{
    ViewBag.Title = "Deletar";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja deletar?</h3>
<div>
    <h4>Associação do Funcionário com EPI</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label for="formGroupExampleInput2" class="form-label">EPI</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Epi.NomEpi)
        </dd>

        <dt>
            <label for="formGroupExampleInput2" class="form-label">Funcionário</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Funcionario.NomeFuncionario)
        </dd>

        <dt>
            <label for="formGroupExampleInput2" class="form-label">Data Entrega</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatEntrega)
        </dd>

        <dt>
            <label for="formGroupExampleInput2" class="form-label">Data Troca</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatTroca)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Mostrar listagem", "Index")
        </div>
    }
</div>
