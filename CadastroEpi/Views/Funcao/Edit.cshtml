@model CadastroEpi.Domain.Model.Funcao

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Função</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FuncaoId)

    <div class="form-group">
        <label for="exampleFormControlInput1" class="control-label col-md-2">Função</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NomeFuncao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NomeFuncao, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <label for="exampleFormControlInput1" class="control-label col-md-2">Empresa</label>
            <div class="col-md-10">
                @Html.DropDownList("EmpresaId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EmpresaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="exampleFormControlInput1" class="control-label col-md-2">EPI</label>
            <div class="col-md-10">
                @Html.DropDownList("EpiId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EpiId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Mostrar listagem de funções", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
