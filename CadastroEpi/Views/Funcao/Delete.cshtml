@model CadastroEpi.Domain.Model.Funcao

@{
    ViewBag.Title = "Delete";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja deletar?</h3>
<div>
    <h4>Função</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label for="exampleFormControlInput1" class="form-label">Razão Social</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Empresa.RazaoSocial)
        </dd>

        <dt>
            <label for="exampleFormControlInput1" class="form-label">EPI</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EpiId)
        </dd>

        <dt>
            <label for="exampleFormControlInput1" class="form-label">Função</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeFuncao)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Mostrar listagem de empresas", "Index")
        </div>
    }
</div>
